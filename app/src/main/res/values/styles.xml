<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="FormTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/formColorPrimary</item>
        <item name="colorPrimaryDark">@color/formColorPrimaryDark</item>
        <item name="colorAccent">@color/formColorAccent</item>
    </style>

    <style name="Ccpa.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/Ccpa.TextInputLayout.TextAppearance.HintText</item>
        <item name="hintTextColor">@color/textColorPrimary</item>
        <item name="boxStrokeColor">@color/textColorPrimary</item>
        <item name="errorTextColor">@color/formErrorColor</item>
    </style>

    <style name="Ccpa.TextInputLayout.TextAppearance.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Ccpa.Button.TextButton.Submit" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/textColorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
